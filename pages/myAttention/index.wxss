/* pages/myAttention/index.wxss */
.news_list{
  display: flex;
  background-color: #fff;
  padding: 28rpx;
  position: relative;
}
.news_list .tip{
  position: absolute;
  width: 56rpx;
  height: 80rpx;
  left: 0;
  top: 0;
}
.news_list .tip .text{
  color: #fff;
  z-index: 2;
  position: absolute;
  font-size: 26rpx;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-weight: bold;
}
.news_list .tip .text-title{
  font-size: 20rpx;
}
.news_list .tip .tip_image{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
}
.news_list + .news_list{
  margin-top: 28rpx;
}
.news_image{
  width: 236rpx;
  height: 154rpx;
  margin-right: 28rpx;
}
.news_con{
  display: flex;
  flex-direction: column;
}
.title{
  font-size: 28rpx;
  
  font-weight: bold;
  color: #06041C;
  line-height: 36rpx;
  margin: 20rpx 0 12rpx;
  text-align: left;
}
.desc{
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: left;
  margin-bottom: 12rpx;
}
.news_con .title{
  flex: 1;
}
.delete-btn{
  display: flex;
  align-items: center;
  height: 100%;
  background-color: #e34d59;
  color: #fff;
  justify-content: center;
  width: 144rpx !important;
}

/* 月新增 */
.news_list .news_li_con{
  flex: 1; 
}
.news_list .news_li_con .title{
  flex: initial;
  margin-top: 0;
  margin-bottom: 20rpx;
}
.news_list .news_image {
  width: 220rpx;
  height: 128rpx;
  background-color: #fafafa;
  margin-right: 0;
}
.news_list .news_li_con .desc{
  padding-top: 6rpx;
}