/* pages/auth/index.wxss */
Page {
  background-color: #fff;
}

.app-container .img {
  width: 100%;
  height: 100%;
  display: block;
}
.avatar-wrapper {
  width: 222rpx;
  height: 222rpx;
  margin: 180rpx auto 72rpx;
  padding: 0;
  display: block;
  border-radius: 50%;
  border: none;
}
.title {
  font-size: 32rpx;

  font-weight: bold;
  color: #06041C;
  line-height: 28rpx;
  margin-bottom: 108rpx;
  text-align: center;
}

.desc {
  margin-top: 50rpx;
  font-size: 24rpx;
  text-align: center;
}

.strong {
  color: #EE793F;
  display: inline;
}

.prop {
  background-color: #fff;
  border-radius: 7px 7px 0px 0px;
  padding: 50rpx 44rpx 0;
}

.prop_title {
  font-size: 30rpx;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: bolder;
  color: #000000;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
  padding-bottom: 26rpx;
}

.prop_bottom {
  padding: 70rpx 80rpx;
  display: flex;
}

.prop_btn {
  flex: 1;
  width: auto;
  color: #EE793F;
}

.prop_btn.primary {
  background: #EE793F;
  color: #fff;
}

.prop_btn+.prop_btn {
  margin-left: 28rpx;
}

.app-container .t-checkbox {
  font-size: 24rpx;
  padding: 26rpx 0;
  align-items: center;
}

.app-container .t-checkbox__content {
  line-height: 36rpx;
}

.app-container .t-checkbox__border--right {
  width: 100% !important;
  right: 0 !important;
}

.app-container .t-checkbox__btn {
  font-size: 26rpx;
  width: 26rpx;
  height: 26rpx;
  line-height: 26rpx;
}

.tag_li {
  display: inline-flex;
  align-items: center;
  height: 38rpx;
  background: #F6F7FB;
  border-radius: 8rpx;
  font-size: 24rpx;
  padding: 4rpx 18rpx;
  margin-bottom: 10rpx;
  color: #727171;
}

.tag_li+.tag_li {
  margin-left: 26rpx;
}

.external-class {
  color: #fff;
  background-color: #EE793F;
  border-color: #EE793F;
  border-radius: 14rpx;
  width: 100% !important;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 26rpx 0;
  font-size: 26rpx;
  font-family: Helvetica-Regular, Helvetica;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 28rpx;
}

.icon {
  margin-right: 18rpx;
}
.scroll_wrap{
  max-height: 60vh;
}